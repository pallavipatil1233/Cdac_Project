package com.rentalcar.pojos;

import java.util.List;
import jakarta.persistence.*;
import lombok.*;

@Entity
@Data
@NoArgsConstructor
@AllArgsConstructor
public class Car {
    
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;
    
    private String brand;
    
    private String model;
    
    @Column(unique = true, nullable = false)
    private String registrationNumber;
    
    @Enumerated(EnumType.STRING)
    private CarStatus status; // Car availability linked to Booking
    
    private double pricePerDay;
    
    private String city; // City where car is available

    // Enum for car status
    public enum CarStatus {
        AVAILABLE, BOOKED, UNDER_MAINTENANCE
    }

    @OneToMany(mappedBy = "car", cascade = CascadeType.PERSIST)
    private List<Booking> bookings;

    // Ensure new cars are set to AVAILABLE by default
    @PrePersist
    public void setDefaultStatus() {
        if (status == null) {
            status = CarStatus.AVAILABLE;
        }
    }
}

